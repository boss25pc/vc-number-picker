/* VC Number Picker â€” structure + states (Pro 2.0.1) */
.vc-np, .vc-board, .vc-cell{
  --vc-bg:#111827;
  --vc-fg:#e9eef8;
  --vc-border:#374151;
  --vc-accent:#3b82f6;
  --vc-sold-bg:#1f2937;
  --vc-cell-size:52px;
  --vc-gap:10px;
  --vc-radius:12px;
}
.vc-board{ display:grid; grid-template-columns:repeat(10,1fr); gap:var(--vc-gap); max-width:680px; }
@media (max-width:1024px){ .vc-board{ grid-template-columns:repeat(8,1fr); } }
@media (max-width:820px){  .vc-board{ grid-template-columns:repeat(6,1fr); } }
@media (max-width:560px){  .vc-board{ grid-template-columns:repeat(5,1fr); } }
.vc-cell{ position:relative; display:flex; align-items:center; justify-content:center; height:var(--vc-cell-size); background:var(--vc-bg); color:var(--vc-fg); border:1px solid var(--vc-border); border-radius:var(--vc-radius); font-weight:800; user-select:none; }
.vc-cell.is-picked{ outline:2px solid var(--vc-accent); box-shadow:0 0 0 2px rgba(59,130,246,.2); }
.vc-cell.is-res, .vc-cell.is-sold{ background:var(--vc-sold-bg); border-color:var(--vc-border); color:#9ca3af; cursor:not-allowed; }
.vc-cell.is-res::after{ content:"RES"; position:absolute; bottom:4px; right:6px; font-size:10px; font-weight:900; padding:2px 6px; border-radius:999px; background:#334155; color:var(--vc-fg); letter-spacing:.5px; }
.vc-cell.is-sold::after{ content:"SOLD"; position:absolute; bottom:4px; right:6px; font-size:10px; font-weight:900; padding:2px 6px; border-radius:999px; background:#991b1b; color:#fff; letter-spacing:.5px; }
